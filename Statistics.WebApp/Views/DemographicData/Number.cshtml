
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>人口数量资料</title>
    <script src="~/Scripts/H-ui_v3.0/lib/jquery/1.9.1/jquery.min.js"></script>
    <script src="~/Scripts/H-ui_v3.0/static/h-ui/js/H-ui.min.js"></script>
    <link href="~/Scripts/H-ui_v3.0/static/h-ui/css/H-ui.min.css" rel="stylesheet" />
    <script src="~/Scripts/MyJs/pccsc.js"></script> 
    <script src="~/Scripts/H-ui_v3.0/lib/hcharts/Highcharts/5.0.6/js/highcharts.js"></script>
    <script src="~/Scripts/H-ui_v3.0/lib/hcharts/Highcharts/5.0.6/js/modules/exporting.js"></script>
    <script src="~/Scripts/H-ui_v3.0/lib/hcharts/Highcharts/5.0.6/js/highcharts-zh_CN.js"></script>
    <script src="~/Scripts/MyJs/DemographicData/Number/Operate.js"></script>
    <!--[if lt IE 9]>
    <link href="~/Scripts/H-ui_v3.0/static/h-ui/css/H-ui.ie.css" rel="stylesheet" />
    <![endif]-->
    <script>
        var code = "@ViewBag.code";
    </script>
</head>
<body style="text-align:center">
    <div style="margin:0 auto;width:90%;height:50px;margin-top:20px;">
        <select style="width: 80px" id="ddlProvince" name="ddlProvince" class="select" size="1">
            <option value="">请选择</option>
        </select>
        <select style="width: 80px" id="ddlCity" name="ddlCity" class="select" size="1">
            <option value="">请选择</option>
        </select>
        <select style="width: 80px" id="ddlCounty" name="ddlCounty" class="select" size="1">
            <option value="">请选择</option>
        </select>
        <select style="width: 85px" id="ddlStreet" name="ddlStreet" class="select" size="1">
            <option value="">请选择</option>
        </select>
        <select style="width: 105px" id="ddlCommunity" name="ddlCommunity" class="select" size="1">
            <option value="">请选择</option>
        </select>
        @*显示图表
        <select style="width: 100px" id="ShowChart" name="ShowChart" class="select" size="1">
            <option value="折线图">折线图</option>
            <option value="柱状图">柱状图</option>
        </select>*@
        <input class="btn btn-primary radius" id="caculate" name="caculate" type="button" style="height:24px;font-size:10pt;padding-top:1px;" value="统计">
    </div>
    <div style="margin:0 auto;width:80%;">
        <table class="table table-border table-bordered table-hover">
            <thead class="text-c">
                <tr><th colspan="4">@DateTime.Now.AddYears(-4).ToString("yyyy") — @DateTime.Now.AddYears(-0).ToString("yyyy")年 人口数量资料</th></tr>
                <tr>
                    <th>年份</th>
                    <th>人口数</th>
                    <th>男性人口</th>
                    <th>女性人口</th> 
                </tr>
            </thead>
            <tbody>
                <tr class="text-c">
                    <td>@DateTime.Now.AddYears(-4).ToString("yyyy")</td>
                    <td><label id="lb4"></label></td>
                    <td><label id="lb4M"></label></td>
                    <td><label id="lb4F"></label></td>
                </tr> 
                <tr class="text-c">
                    <td>@DateTime.Now.AddYears(-3).ToString("yyyy")</td>
                    <td><label id="lb3"></label></td>
                    <td><label id="lb3M"></label></td>
                    <td><label id="lb3F"></label></td>
                </tr> 
                <tr class="text-c">
                    <td>@DateTime.Now.AddYears(-2).ToString("yyyy")</td>
                    <td><label id="lb2"></label></td>
                    <td><label id="lb2M"></label></td>
                    <td><label id="lb2F"></label></td>
                </tr> 
                <tr class="text-c">
                    <td>@DateTime.Now.AddYears(-1).ToString("yyyy")</td>
                    <td><label id="lb1"></label></td>
                    <td><label id="lb1M"></label></td>
                    <td><label id="lb1F"></label></td>
                </tr> 
                <tr class="text-c">
                    <td>@DateTime.Now.AddYears(-0).ToString("yyyy")</td>
                    <td><label id="lb0"></label></td>
                    <td><label id="lb0M"></label></td>
                    <td><label id="lb0F"></label></td>
                </tr> 
            </tbody>
        </table>
    </div>
    <div style="width: 80%; height: 500px; margin: 0 auto;margin-bottom:50px;">
        <div id="container1" style="width: 50%; float:left"></div>
        <div id="container2" style="width: 50%; float:left"></div>
    </div>
    
</body>
</html>
